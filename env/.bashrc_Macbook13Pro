##set terminal
export TERM=xterm-256color

## Directories
export HOME=/Users/shreyas
export sha_bash=$HOME/Desktop/Shreyas/sha_bash

## Commands
alias sverdrup='ssh -J shreyas@login1.oden.utexas.edu shreyas@sverdrup.oden.utexas.edu'
alias stampede2='ssh shrey911@stampede2.tacc.utexas.edu'
